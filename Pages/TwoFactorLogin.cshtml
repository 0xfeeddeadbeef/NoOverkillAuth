@page
@model NoOverkillAuth.Pages.TwoFactorLoginModel
@{
    ViewData["Title"] = "2FA login page";
}

<div>
    @Model.Message
</div>

<div>
    <form method="post">
        <div class="form-group">
            <label asp-for="TotpCode" class="col-form-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="TotpCode" />
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-outline-primary btn-sm">Verify</button>
        </div>
    </form>
</div>
